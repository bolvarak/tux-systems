{
	"compilerOptions": {
		"baseUrl": "./Source",
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"lib": [
			"es2015",
			"es2016",
			"es2017",
			"es2018"
		],
		"module": "commonjs",
		"outDir": "./Build",
		"pretty": true,
		"removeComments": true,
		"sourceMap": true,
		"sourceRoot": "./Source",
		"strict": true,
		"target": "es2018"
	},
	"exclude": [
		"./node_modules"
	]
}
